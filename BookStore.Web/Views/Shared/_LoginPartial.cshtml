@using BookStore.Models.Identity
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager




@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link p-2 p-lg-3 d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            @* <i class="fa-regular fa-circle-user color-text ps-2 fs-4"></i> *@
            مرحبًا @UserManager.GetUserName(User)!
        </a>
    </li>


    @* <li class="nav-item"> *@
    @*         <a id="manage" class="text-decoration-none" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">مرحبًا @UserManager.GetUserName(User)!</a> *@
    @* </li> *@
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link p-2 p-lg-3">تسجيل الخروج</button>
        </form>
    </li>
}
else
{

    <li class="nav-item">
        <a class ="nav-link p-2 p-lg-3 d-flex align-items-center" id="login" asp-area="Identity" asp-page="/Account/Login">
            <i class="fa-regular fa-circle-user color-text ps-2 fs-4"></i>
            <span>تسجيل الدخول</span>
        </a>
    </li>
}

