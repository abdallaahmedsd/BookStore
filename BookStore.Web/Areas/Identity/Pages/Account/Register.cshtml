@page
@using BookStore.Utilties
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "إنشاء حساب جديد";

}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<style>
    body {
    background-color: #000;
    color: #fff;
    font-family: 'Arial', sans-serif;
    }

    .form-control {
    background-color: #000;
    border: 1px solid #28a745;
    color: #fff;
    }

    .form-control:focus {
    border-color: #28a745;
    box-shadow: none;
    }

    .btn-primary {
    background-color: #28a745;
    border: none;
    width: 100%;
    }

    .btn-primary:hover {
    background-color: #218838;
    }

    .form-label {
    color: #28a745;
    }

    a {
    color: #28a745;
    text-decoration: none;
    }

    a:hover {
    text-decoration: underline;
    }

    .registration-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    }

    .registration-form {
    width: 100%;
    max-width: 400px;
    padding: 20px;
    background-color: #111;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    .registration-title {
    text-align: center;
    font-size: 1.5rem;
    margin-bottom: 10px;
    color: #28a745;
    }

    .login-link-container {
    text-align: center;
    margin-bottom: 20px;
    font-size: 1rem;
    }

    .name-group {
    display: flex;
    gap: 10px;
    }

    .separator {
    text-align: center;
    margin: 20px 0;
    font-size: 1rem;
    color: #fff;
    }

    .social-login {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 20px;
    }

    .social-login a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: #111;
    border: 2px solid #28a745;
    color: #28a745;
    font-size: 1.5rem;
    transition: 0.3s;
    }

    .social-login a:hover {
    background-color: #28a745;
    color: #000;
    }
</style>

<div class="registration-container">
    <div class="registration-form">
        <h1 class="registration-title">إنشاء حساب جديد</h1>
        <div class="login-link-container">
            <span>هل لديك حساب بالفعل؟</span>
            <a asp-page="./Login">تسجيل الدخول</a>
        </div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="name-group mb-3">
                <div>
                    <label asp-for="Input.FirstName" class="form-label">الاسم الأول</label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="أدخل اسمك الأول" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.LastName" class="form-label">الاسم الأخير</label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="أدخل اسمك الأخير" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">البريد الإلكتروني</label>
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">كلمة المرور</label>
                <input asp-for="Input.Password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="terms">
                <label class="form-check-label" for="terms">أوافق على الشروط والأحكام</label>
            </div>
            @if(User.IsInRole(AppUserRoles.RoleAdmin))
            {
                <div class="mb-3 col-md-6 ">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RolesList" class="form-select">
                        <option disabled selected>Select Role</option>
                    </select>
                </div>
            }
            <button type="submit" class="btn btn-primary">تسجيل حساب جديد</button>
        </form>
        <div class="separator">---------------- أو ----------------</div>
        <div class="social-login">
            <a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
            <a href="#" title="Google"><i class="fab fa-google"></i></a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
