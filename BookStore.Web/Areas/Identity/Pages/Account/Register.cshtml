@page
@using BookStore.Utilties
@model RegisterModel
@{
    Layout = "_IdentityLayout";
    ViewData["Title"] = "إنشاء حساب جديد";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/Register.css" />
}

<div class="container container-sm mt-3">
    <div class="d-flex mb-sm-3 justify-content-lg-start justify-content-center">
        <a href="/">
            <img src="~/images/Logo.png" alt="" />
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-8 register-container  p-5 p-sm-3">
            <div>
                <h1 class="form-title mb-sm-3 fs-1 fw-bold d-flex justify-content-lg-start justify-content-center">إنشاء حساب جديد</h1>
                <div class="row mb-3 link-login">
                    <div>لديك حساب؟ <a asp-page="./Login" class="text-decoration-none">سجل الدخول</a></div>
                </div>
            </div>

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                @* <div asp-validation-summary="All" class="row mb-3 text-danger" role="alert"></div> *@
                <div class="row mb-2">
                    <div class="col">
                        <label asp-for="Input.FirstName" class="form-label mb-2 fs-6">الاسم الاول</label>
                        <input asp-for="Input.FirstName"
                               class="form-control register-input"
                               placeholder="اسمك " />
                        <span asp-validation-for="Input.FirstName" class="text-danger mt-1"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Input.LastName" class="form-label mb-2 fs-6">الاسم الأخير</label>
                        <input asp-for="Input.LastName"
                               class="form-control register-input"
                               placeholder="اسمك " />
                        <span asp-validation-for="Input.LastName" class="text-danger mt-1"></span>
                    </div>
                </div>

                <div class="mb-2">
                    <label asp-for="Input.Email" class="form-label mb-2 fs-6">البريد الإلكتروني</label>
                    <input asp-for="Input.Email"
                           class="form-control register-input"
                           placeholder="example@mail.com" />
                    <span asp-validation-for="Input.Email" class="text-danger mt-1"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Input.Password" class="form-label mb-2 fs-6">كلمة المرور</label>
                    <input asp-for="Input.Password"
                           class="form-control register-input"
                           placeholder="ادخل هنا" />
                    <span asp-validation-for="Input.Password" class="text-danger mt-1"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Input.ConfirmPassword" class="form-label mb-2 fs-6">
                        تأكيد كلمة المرور
                    </label>
                    <input asp-for="Input.ConfirmPassword"
                           class="form-control register-input"
                           placeholder="ادخل هنا" />
                    <span class="text-danger mt-1"></span>
                </div>

                @if (User.IsInRole(AppUserRoles.RoleAdmin))
                {
                    @* class="mb-3 mt-3 col-md-12 " *@
                    <div class="mb-3">
                        <select asp-for="Input.Role" asp-items="@Model.Input.RolesList" class="form-select roles-select ">
                            <option disabled selected>Select Role</option>
                        </select>
                    </div>
                }

                <div class="mb-3 terms-container d-flex justify-content-start">
                    <input class="ms-2 position-relative"
                           asp-for="Input.AgreedToTerms"
                           type="checkbox" />
                    <label asp-for="Input.AgreedToTerms" class="policy-label  fs-6">أوافق على <a href="#" class="text-decoration-none">الشروط والأحكام</a></label>
                    <span class="text-danger mt-1"></span>
                </div>

                <div class="d-grid mb-2">
                    <button type="submit" class="btn button-submit fs-5 fw-bold p-2 rounded-sm d-flex justify-content-center align-items-center">
                        تسجيل حساب جديد
                    </button>
                </div>
            </form>

            <div>
                <div class="d-flex justify-content-center align-items-center mt-4">
                    <span>----------- أو -----------</span>
                </div>
                <div class="col d-flex justify-content-center align-items-center external-login-buttons">
                    <!-- Google Button -->
                    <button class="btn rounded-circle mx-2 external-login-btn p-3 d-flex justify-content-center align-items-center">
                        <i class="fab fa-google"></i>
                    </button>
                    <!-- Facebook Button --> 
                    <button class="btn rounded-circle mx-2 external-login-btn p-3 d-flex justify-content-center align-items-center">
                        <i class="fab fa-facebook"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
         document.addEventListener("DOMContentLoaded", function () {
            const inputs = document.querySelectorAll('.register-input');
            inputs.forEach(input => {
                    input.style.backgroundColor = 'transparent';
                    input.style.color = 'var(--text-color)';
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}

