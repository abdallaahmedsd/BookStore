@page
@using BookStore.Utilties
@model RegisterModel
@{
	Layout = "_IdentityLayout";
	ViewData["Title"] = "إنشاء حساب جديد";
}

@section Styles
{
	<link rel="stylesheet" href="~/css/Register.css" />
}

<!-- Register Form --!>
<div class="register-form mx-4 text-center d-flex flex-column justify-content-center align-content-center gap-3 gap-md-4">
	<div>
		<h1 class="fw-bold">إنشاء حساب جديد</h1>
		<div>
			<span>لديك حساب ؟ <a asp-page="./Login"  class ="color-second">سجل دخول الان!</a></span>
		</div>
	</div>
	<form class="d-flex flex-column gap-4" method="post" asp-route-returnUrl="@Model.ReturnUrl" >
		<div class="row m-0 px-1">

			<div class="col-6 pe-0 ps-1">
				 <div class="input-box email-box w-100 position-relative">
