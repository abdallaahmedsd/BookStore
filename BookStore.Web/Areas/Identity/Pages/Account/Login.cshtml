@page
@model LoginModel

@{
    Layout = "_IdentityLayout";
    ViewData["Title"] = "Log in";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/Identity/login.css" />
}


<!-- Login Form --!>
<div class="login-container text-center d-flex flex-column justify-content-center align-content-center gap-3 gap-md-4">
    <div>
        <h1 class="fw-bold">تسجيل الدخول</h1>
        <div>
            <span>ليس لديك حساب؟  <a  asp-page="./Register"  asp-route-returnUrl="@Model.ReturnUrl" class ="color-second">سجل الان!</a></span>
        </div>
    </div>
    <form class="d-flex flex-column gap-4" id="account" method="post" >
        <div class="px-1">
             <div class="input-box email-box w-100 position-relative">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19.7055 6.29452C18.2618 4.99044 15.8298 4.5 12 4.5C8.1702 4.5 5.73816 4.99044 4.29452 6.29452M19.7055 6.29452C21.0003 7.46413 21.5 9.28823 21.5 12C21.5 17.7353 19.2647 19.5 12 19.5C4.73529 19.5 2.5 17.7353 2.5 12C2.5 9.28823 2.99972 7.46413 4.29452 6.29452M19.7055 6.29452L13.4142 12.5858C12.6331 13.3668 11.3668 13.3668 10.5858 12.5858L4.29452 6.29452" stroke="#CFD0D6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>

                <input asp-for="Input.Email" class="form-control rounded-second p-2 px-5" type="text" placeholder="البريد الإلكتروني"  aria-label="default input example">
             </div>

               <span
                asp-validation-for="Input.Email"
                 class="text-danger mt-1"
               ></span>
        </div>
        <div class="px-1">
             <div class="input-box password-box w-100 position-relative">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M19.7055 6.29452C18.2618 4.99044 15.8298 4.5 12 4.5C8.1702 4.5 5.73816 4.99044 4.29452 6.29452M19.7055 6.29452C21.0003 7.46413 21.5 9.28823 21.5 12C21.5 17.7353 19.2647 19.5 12 19.5C4.73529 19.5 2.5 17.7353 2.5 12C2.5 9.28823 2.99972 7.46413 4.29452 6.29452M19.7055 6.29452L13.4142 12.5858C12.6331 13.3668 11.3668 13.3668 10.5858 12.5858L4.29452 6.29452" stroke="#CFD0D6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>

                <input asp-for="Input.Password" class="form-control rounded-second p-2 px-5" type="password" placeholder="كلمة المرور"  aria-label="default input example">
                <svg id="toggle-password" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.95035 4.85392C9.59419 4.68164 10.2779 4.58333 11 4.58333C14.4442 4.58333 17.0169 6.82037 18.5465 8.65273C19.6944 10.0277 19.6942 11.9725 18.5464 13.3475C18.3705 13.5582 18.1808 13.7742 17.9776 13.9915M11.4583 8.28802C12.6099 8.48122 13.5188 9.3901 13.712 10.5417M2.74998 2.75L19.25 19.25M10.5417 13.712C9.54783 13.5452 8.73475 12.8455 8.40647 11.9167M3.98669 8.0467C3.79693 8.25113 3.61917 8.45418 3.45363 8.65248C2.30578 10.0275 2.3056 11.9723 3.45342 13.3473C4.98302 15.1796 7.55573 17.4167 11 17.4167C11.7352 17.4167 12.4308 17.3147 13.0849 17.1366" stroke="#C2C3CB" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
             </div>

             <span
                asp-validation-for="Input.Password"
                 class="text-danger mt-1"
               ></span>
        </div>

      <div class="px-1">
            <div class="d-flex justify-content-between align-items-center px-1">
                    <div class="remember-me-box flex-center">
                        <input class="ms-2 position-relative" asp-for="Input.RememberMe" type="checkbox"/>
                        <label asp-for="Input.RememberMe" class="fs-6 color-gray"> تذكرني </label>
                    </div>
                     <a id="forgot-password" asp-page="./ForgotPassword"  class="forget-password color-second" >هل نسيت كلمة المرور؟</a>
            </div>

             <span
                asp-validation-for="Input.RememberMe"
                 class="text-danger mt-1"
               ></span>
       </div>

       <button type="submit" class="btn login-button w-100 fs-5 fw-bold p-2 rounded-second bg-main color-text">تسجيل دخول</button>
    </form>

    <div>
        <div class="divider-with-text flex-center text-center mb-3">
             <span class ="mx-3 color-gray fw-bold">أو</span>
        </div>
        <div class="row-col-2 m-0 flex-center mt-2" >
        <!-- Google Button -->
            <a class="btn p-0 external-login-button" href="#" >
            <svg width="45" height="44" viewBox="0 0 45 44" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <rect x="0.5" width="44" height="44" rx="5" fill="#CFD0D6" />
                <rect x="10.5" y="10" width="24" height="24" fill="url(#pattern0_6_380)" />
                <defs>
                    <pattern id="pattern0_6_380" patternContentUnits="objectBoundingBox" width="1" height="1">
                        <use xlink:href="#image0_6_380" transform="scale(0.0111111)" />
                    </pattern>
                    <image id="image0_6_380" width="90" height="90" xlink:href="data:image/png;base64," />
                </defs>
            </svg>
            </a>

        <!-- Facebook Button -->
        <a class="btn p-0 external-login-button " href="#">
                <svg width="45" height="44" viewBox="0 0 45 44" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                    <rect x="0.5" width="44" height="44" rx="5" fill="#CFD0D6" />
                    <rect x="10.5" y="10" width="24" height="24" fill="url(#pattern0_6_379)" />
                    <defs>
                        <pattern id="pattern0_6_379" patternContentUnits="objectBoundingBox" width="1" height="1">
                            <use xlink:href="#image0_6_379" transform="scale(0.0111111)" />
                        </pattern>
                        <image id="image0_6_379" width="90" height="90" xlink:href="data:image/png;base64," />
                    </defs>
                </svg>
            </a>
         </div>
    </div>
</div>



@section HeroSide
{
    <div class="image-container  h-50">
            <img class="w-100 h-100" src="/images/Login-Hero.svg" alt="" />
    </div>
    <div class="text-center w-75 color-text">
        <h3 class="mb-4 fw-bold">خليك ملك زمانك بالمعرفه</h3>
        <p class="fs-6 lh-sm">
            هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا
            النص من مولد النص العربى، حيث يمكنك أن تولد مثل هذا النص أو العديد
            من النصوص الأخرى إضافة إلى زيادة عدد الحروف التى يولدها التطبيق.
        </p>
    </div>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
