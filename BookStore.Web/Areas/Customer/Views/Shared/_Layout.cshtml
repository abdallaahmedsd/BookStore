@using BookStore.Utilties;
@using BookStore.Utilties.HTMLHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore.Web</title>
   

    <partial name="_StyleLinksPartial"></partial>


    <link rel="stylesheet" href="~/css/Customer/siteLayout.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body dir="rtl">
    <header>
        <!-- navbar  fixed-top -->
        <nav class="navbar navbar-expand-lg fixed-top bg-main text-black border-bottom">
            <div class="container">
                <a class="navbar-brand m-0" href="#">
                    <img src="~/images/Logo-1.svg" alt="كتبي" />
                </a>
              
                <button class="navbar-toggler fs-6" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNav" aria-controls="offcanvasNav" aria-expanded="false" aria-label="Toggle navigation">
                    <svg width="30" height="30" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 17.0308H20M4 12.0308H20M4 7.03077H20" stroke="#ffffff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </button>

                <div class="offcanvas offcanvas-start w-50" tabindex="-1" id="offcanvasNav" aria-labelledby="offcanvasNavLabel">
                    <div class="offcanvas-header bg-text color-main">
                        <h5 class="offcanvas-title" id="offcanvasNavLabel">Menu</h5>
                        <button type="button" class="btn-close border-0 color-second" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body bg-main">
                        <ul class="navbar-nav me-auto mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link p-2 p-lg-3 @Html.IsActive("Customer/Home/Index")"
                                   aria-current="page"
                                   asp-area="Customer" asp-controller="Home" asp-action="Index">الرئيسية</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link p-2 p-lg-3 @Html.IsActive("Customer/Book/Index,Customer/Book/Details")"
                                   asp-area="Customer" asp-controller="Book" asp-action="Index">الكتب</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link p-2 p-lg-3 @Html.IsActive("Customer/Order/Index")" href="#">ادارة المشتريات</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link p-2 p-lg-3 @Html.IsActive("Customer/Home/Privacy")"
                                   asp-area="Customer" asp-controller="Home" asp-action="Privacy">سياسة الخصوصية</a>
                            </li>

                            @if (User.IsInRole(AppUserRoles.RoleAdmin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link p-2 p-lg-3 @Html.IsActive("Admin/Dashboard/Index")" asp-area="Admin" asp-action="Index" asp-controller="Dashboard">ادارة التطبيق</a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav me-auto mb-lg-0 align-items-lg-center">
                            <li class="nav-item shopping-card-box">
                                @await Component.InvokeAsync("ShoppingCartQuantity")
                            </li>
                            <partial name="_LoginPartial" />
                        </ul>
                    </div>
                </div>
           
            </div>
        </nav>


    </header>


    <partial name="_NotificationsPartial" />

    @RenderBody() 


    <footer class="border-top footer text-muted bg-main m-0">
        <div class="container color-text">
            <div class="row flex-wrap justify-content-center">
                <div class="col-6 text-center">
                    جميع الحقوق محفوظة لدى
                    <a class="color-second pointer hover-black" href="#"> كتبي</a>
                </div>
                <div class="col-6 text-center">
                    &copy; 2025 -
                    <a class="color-second pointer hover-black" href="#">ARAMM</a>
                </div>
            </div>
        </div>
    </footer>


    <!-- Validations JS Scripts -->
    <partial name="_ValidationScriptsPartial"></partial>

    <partial name="_ScriptsPartial"></partial>
    <script src="~/js/Customer/siteLayout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
